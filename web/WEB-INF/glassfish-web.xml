<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE glassfish-web-app PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Servlet 3.0//EN" "http://glassfish.org/dtds/glassfish-web-app_3_0-1.dtd">
<glassfish-web-app error-url="">
  <class-loader delegate="true"/>
  <jsp-config>
    <property name="keepgenerated" value="true">
      <description>Keep a copy of the generated servlet class' java code.</description>
    </property>
    <property name="compilerSourceVM" value="7"/> 
    <property name="compilerTargetVM" value="7"/>    
  </jsp-config>
  <servlet>
      <servlet-name>ControllerLogin</servlet-name>
      <servlet-class>presentation.login.ControllerLogin</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>ControllerAdmin</servlet-name>
      <servlet-class>presentation.administrador.ControllerAdmin</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>ControllerProfe</servlet-name>
      <servlet-class>presentation.profesor.ControllerProfe</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>controllerLogin</servlet-name>
       <url-pattern>/presentation/login/show</url-pattern>
       <url-pattern>/presentation/login/login</url-pattern>
       <url-pattern>/presentation/login/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>controllerAdmin</servlet-name>
       <url-pattern>/presentation/administrador/show</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>controllerProfe</servlet-name>
       <url-pattern>/presentation/profesor/show</url-pattern>
  </servlet-mapping>
  <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</glassfish-web-app>
