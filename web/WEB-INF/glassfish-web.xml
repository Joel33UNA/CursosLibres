<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE glassfish-web-app PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Servlet 3.0//EN" "http://glassfish.org/dtds/glassfish-web-app_3_0-1.dtd">
<glassfish-web-app error-url="">
  <class-loader delegate="true"/>
  <jsp-config>
    <property name="keepgenerated" value="true">
      <description>Keep a copy of the generated servlet class' java code.</description>
    </property>
    <property name="compilerSourceVM" value="7"/>
    <property name="compilerTargetVM" value="7"/>
  </jsp-config>
  <servlet>
    <servlet-name>ControllerLogin</servlet-name>
    <servlet-class>presentation.login.ControllerLogin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ControllerAdmin</servlet-name>
    <servlet-class>presentation.administrador.ControllerAdmin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ControllerProfe</servlet-name>
    <servlet-class>presentation.profesor.ControllerProfe</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ControllerSignin</servlet-name>
    <servlet-class>presentation.signin.ControllerSignin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ControllerEst</servlet-name>
    <servlet-class>presentation.estudiante.ControllerEst</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ControllerCurso</servlet-name>
    <servlet-class>presentation.curso.ControllerCurso</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ControllerGrupo</servlet-name>
    <servlet-class>presentation.grupo.ControllerGrupo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControllerLogin</servlet-name>
    <url-pattern>/presentation/login/show</url-pattern>
    <url-pattern>/presentation/login/login</url-pattern>
    <url-pattern>/presentation/login/logout</url-pattern>
    <url-pattern>/presentation/login/infoUsuario</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ControllerAdmin</servlet-name>
    <url-pattern>/presentation/administrador/show</url-pattern>
    <url-pattern>/presentation/administrador/showprof</url-pattern>
    <url-pattern>/presentation/administrador/showcur</url-pattern>
    <url-pattern>/presentation/administrador/signin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ControllerProfe</servlet-name>
    <url-pattern>/presentation/profesor/show</url-pattern>
    <url-pattern>/presentation/profesor/visualizarprofes</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ControllerSignin</servlet-name>
    <url-pattern>/presentation/signin/show</url-pattern>
    <url-pattern>/presentation/signin/showprof</url-pattern>
    <url-pattern>/presentation/signin/signin</url-pattern>
    <url-pattern>/presentation/signin/signinprof</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ControllerEst</servlet-name>
    <url-pattern>/presentation/estudiante/show</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ControllerCurso</servlet-name>
    <url-pattern>/presentation/curso/visualizarcursos</url-pattern>
    <url-patter>/presentation/curso/visualizarcursoadmin</url-patter>
    <url-pattern>/presentation/curso/showcursoadd</url-pattern>
    <url-pattern>/presentation/curso/buscar</url-pattern>
    <url-patter>/presentation/curso/agregar</url-patter>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ControllerGrupo</servlet-name>
    <url-pattern>/presentation/grupo/show</url-pattern>
    <url-pattern>/presentation/grupo/matricula</url-pattern>
    <url-pattern>/presentation/grupo/buscar</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>
            30
        </session-timeout>
  </session-config>
</glassfish-web-app>
